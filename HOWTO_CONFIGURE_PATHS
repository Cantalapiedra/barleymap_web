# Created 20180111 (updated 20180111)

## You could copy the next example, and change the fields which begin with "$"

# absolute path where the barleymap web application has been installed.
app_path $BARLEYMAPWEB_PATH
# leave untouched
genmap_path app_aux/
split_blast_path app_aux/
citation Cantalapiedra_CP,_Boudiar_R,_Casas_AM,_Igartua_E,_Contreras-Moreira_B._BARLEYMAP:_physical_and_genetic_mapping_of_nucleotide_sequences_and_annotation_of_surrounding_loci_in_barley._Mol_Breeding_(2015)_35:13_DOI_10.1007/s11032-015-0253-1
stdalone_app http://eead.csic.es/compbio/soft/barleymap/
# directory where to store the tmp files generated by barleymap
tmp_files_path $BARLEYMAPWEB_PATH/tmp_files
# the path where datasets data (i.e. pre-computed markers) are stored
datasets_path $BARLEYMAP_HOME/datasets/
annot_path $BARLEYMAP_HOME/datasets_annotation/
# the path where maps data are stored
maps_path $BARLEYMAP_HOME/maps/
# paths to the executables and databases of blastn, gmap and hsblastn, respectively
# (non of them are mandatory)
blastn_app_path $NCBIBLASTN/bin/blastn
blastn_dbs_path $BARLEYMAP_HOME/blast_dbs/
gmap_app_path $GMAP/bin/gmap
gmap_dbs_path $BARLEYMAP_HOME/gmap_dbs/
gmapl_app_path /data3/soft/alignment_tools/gmap-2013-08-31/bin/gmapln
hsblastn_app_path /home/cantalapiedra/bin/hs-blastn-0.0.5+/hs-blastn-src/hs-blastn
hsblastn_dbs_path /home/barleymap/hsblastn_dbs/